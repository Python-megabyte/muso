extends  ../_skeleton

//- Includes
include ../components/_ui-inline-subscribe-form
include ../components/_ui-coundown

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Coming soon'

block page 
	// Page content
	section.section.one-screen-page.bg-primary-dark
		.one-screen-page-inner
			.page-header: .container
				// Brand
				+logo

			.page-content
				.container
					.row.justify-content-center
						.col-md-10.col-xl-8
							.one-screen-page-box
								h1.page-subtitle We're Getting Ready to Launch In
								// TimeCircles
								+countdown({
									from: '2018-05-25',
									to: '2018-12-31',
									array: ['Days', 'Hours', 'Minutes', 'Seconds']
								})
								p.heading-6.page-description Our website is under construction, we are working very hard to give you the best experience on our new web site. Stay ready, we`re launching soon.
								.block-sm
									+inline-subscribe-form-2({})

			.page-footer: .container
				+rights
