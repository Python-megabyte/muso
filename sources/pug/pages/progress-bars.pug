extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	include ../sections/_header-creative

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Skill Bars
	section.section.section-lg.bg-default
		.container
			.row
				.col-md-10.col-lg-6.col-xxl-4
					h2 Skill Bars
					.progress-linear-wrap
						+progress-bar-linear({
							title: "Music",
							valueTo: "75"
						})

						+progress-bar-linear({
							title: "News",
							valueTo: "50"
						})

						+progress-bar-linear({
							title: "Entertainment",
							valueTo: "80"
						})

						+progress-bar-linear({
							title: "Shows",
							valueTo: "75"
						})

	// Progress Bars
	section.section.section-lg.bg-default
		.container
			h2 Progress Bars
			.row.row-center.justify-content-center.justify-content-md-start.row-30.text-center.row-offset-4
				.col-6.col-sm-4.col-md-3.col-lg-2
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.25' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='96' data-thickness='2')
						span
					p.progress-bar-circle-title Fresh Music
				.col-6.col-sm-4.col-md-3.col-lg-2
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.5' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='96' data-thickness='2')
						span
					p.progress-bar-circle-title New Shows
				.col-6.col-sm-4.col-md-3.col-lg-2
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.75' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='96' data-thickness='2')
						span
					p.progress-bar-circle-title News & Updates

	// Counters
	section.section.section-lg.bg-default
		.container
			h2 Counters
			.row.row-30.justify-content-center.row-flex.row-offset-1
				.col-md-6.col-lg-4
					+counter-boxed({
						imageName: "progress-1-60x60",
						subtitle: "More than",
						value: "23754",
						title: "Podcasts",
						exeption: "Amet porttitor eget dolor morbi non arcu. Hendrerit gravida rutrum quisque non."
					})

				.col-md-6.col-lg-4
					+counter-boxed({
						imageName: "progress-2-58x46",
						subtitle: "More than",
						value: "520",
						title: "Live Concerts",
						exeption: "Habitant morbi tristique senectus et netus et malesuada fames ac."
					})

				.col-md-6.col-lg-4
					+counter-boxed({
						imageName: "progress-3-60x55",
						subtitle: "More than",
						value: "18",
						title: "DJs and Hosts",
						exeption: "Phasellus egestas tellus rutrum tellus pellentesque eu tincidunt tortor."
					})

	// Page Footer
	include ../sections/_footer-2
