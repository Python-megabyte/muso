extends  ../_skeleton

//- Includes
include ../components/_ui-inline-subscribe-form

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Grid Gallery'

block page 
	// Page Header
	include ../sections/_header-creative

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Your Career Starts Here
	section.section.section-lg.bg-gray-100
		.container
			.row.isotope-wrap
				// Isotope Filters
				.col-lg-12
					.isotope-filters.isotope-filters-horizontal.isotope-filters-line
						button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true") Filter
							span.caret
						ul.isotope-filters-list#isotope-filters
							li
								a.active(data-isotope-filter='*', data-isotope-group='gallery', href='#') All Types
							li
								a(data-isotope-filter='Category 1', data-isotope-group='gallery', href='#') Type 1
							li
								a(data-isotope-filter='Category 2', data-isotope-group='gallery', href='#') Type 2
							li
								a(data-isotope-filter='Category 3', data-isotope-group='gallery', href='#') Type 3

				// Isotope Content
				.col-lg-12.text-left
					.isotope(data-isotope-layout='fitRows', data-isotope-group='gallery', data-lightgallery="group")
						.row
							.col-sm-6.col-lg-4.isotope-item(data-filter='*')
